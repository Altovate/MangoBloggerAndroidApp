<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="320dp">




      <android.support.v7.widget.CardView
          android:layout_width="340dp"
          android:layout_height="300dp"
          android:layout_marginLeft="10dp"
          android:layout_marginTop="10dp"
          app:cardElevation="6dp">

         <ImageView
             android:id="@+id/bg_image"
             android:layout_width="match_parent"
             android:layout_height="150dp"
            android:scaleType="fitXY"/>

         <TextView
             android:id="@+id/mango_title"
             android:layout_width="150dp"
             android:layout_height="wrap_content"
             android:layout_marginTop="165dp"
             android:layout_marginLeft="110dp"
             android:maxLines="1"
             android:textSize="15dp"
             android:textColor="#000"
             />

         <TextView
             android:layout_width="280dp"
             android:layout_height="wrap_content"
             android:layout_marginTop="200dp"
             android:layout_marginLeft="35dp"
             android:textSize="12dp"
             android:maxLines="3"
             android:textColor="#9e9d9d"
             android:id="@+id/mango_description"
             android:text=""/>


         <ImageView
             android:layout_width="40dp"
             android:layout_height="3dp"
             android:background="@drawable/line"
             android:layout_marginTop="188dp"
             android:layout_marginLeft="150dp"/>



         <ImageView
             android:layout_width="120dp"
             android:layout_height="35dp"
             android:background="@drawable/button"
             android:layout_marginTop="255dp"
             android:layout_marginLeft="110dp"/>

         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="Read More"
             android:textColor="#fff"
             android:textSize="11sp"
             android:layout_marginTop="265dp"
             android:layout_marginLeft="145dp"
             />

         <ImageView
             android:layout_width="15dp"
             android:layout_height="15dp"
             android:layout_marginTop="268dp"
             android:layout_marginLeft="310dp"
             android:background="@drawable/ic_visibility_black_24dp"/>

         <ImageView
             android:layout_width="20dp"
             android:layout_height="20dp"
             android:layout_marginLeft="20dp"
             android:layout_marginTop="20dp"
             android:background="@drawable/ic_favorite_black_24dp"/>

         <ImageView
             android:layout_width="15dp"
             android:layout_height="15dp"
             android:layout_marginLeft="5dp"
             android:layout_marginTop="268dp"
             android:background="@drawable/ic_share_black_24dp"/>

         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="4350"
             android:textSize="13dp"
             android:textColor="#c9c8c8"
             android:layout_marginTop="280dp"
             android:layout_marginLeft="300dp"
             />

      </android.support.v7.widget.CardView>






</RelativeLayout>



